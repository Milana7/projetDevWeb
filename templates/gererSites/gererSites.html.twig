{% extends 'base.html.twig' %}

{% block title %}gererSites{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<table>
    {% for site in listSite %}
    <tr>
        <td>{{ site.nom }}
        <td>{% if(site.isActif) %}
                Actif
            {% else %}
                Inactif
            {% endif %}
        </td>
        <td> <a href="{{ path('_modifierSite', {'idSite': site.id}) }}">Modifier</a> <span class="deleteLink" onclick="validateDeleteSite({{ site.id }})">Supprimer</span></td>

    </tr>
    {% endfor %}
</table>

{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}

    <script>
        function validateDeleteSite($idSite) {
            if (confirm("Voulez-vous vraiment supprimer ce site ?")) {
                window.location.href="/supprimerSite/" + $idSite;
            } else {
                console.log("Annulation de la demande de suppression");
            }
        }
    </script>
{% endblock %}
