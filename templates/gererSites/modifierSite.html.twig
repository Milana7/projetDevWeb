{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center" id="gererSiteTitle">Modifier le nom du site</h1>
    <div class="row" id="modifierSiteContainer">
        <div class="col-sm-6 offset-sm-2">
            {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'col-sm-3 offset-sm-3 bg-light'}}) }}
                <div class="col-sm-5 offset-sm-1">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.isActif, null, {'label_attr': {'class': 'col-sm-3 offset-sm-3 bg-light'}}) }}
                <div class="col-sm-3 offset-sm-3">
                    {{ form_widget(form.isActif) }}
                    {{ form_errors(form.isActif) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-4 offset-sm-7">
                    <button type="submit" class="btn btn-outline-success">Enregistrer</button>
                    <a href="{{ path('gererSites') }}" class="btn btn-outline-danger">Annuler</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}