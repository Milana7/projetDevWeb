{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <h1>{{ utilisateur.nom }}</h1>
    </div>
    <br>
    <div class="row" id="modifierProfilContainer">
        <div class="image col-sm-3 col-xs-12 mb-4 ml-4 mr-4">
            <img src="{{ asset('image/profil.jpg') }}" class="img-thumbnail rounded">
        </div>
        <div class="col-sm-6">
            <div class="form-group row">
                <label for="pseudo" class="col-sm-4 offset-sm-2 col-form-label bg-light">Pseudo : </label>
                <div class="col-sm-6 form-control">
                    {{ utilisateur.pseudo }}
                </div>
            </div>
            <div class="form-group row">
                <label for="nom" class="col-sm-4 offset-sm-2 col-form-label bg-light">Nom : </label>
                <div class="col-sm-6 form-control">
                    {{ utilisateur.nom }}
                </div>
            </div>
            <div class="form-group row">
                <label for="telephone" class="col-sm-4 offset-sm-2 col-form-label bg-light">Téléphone : </label>
                <div class="col-sm-6 form-control">
                    {{ utilisateur.telephone }}
                </div>
            </div>
            <div class="form-group row">
                <label for="mail" class="col-sm-4 offset-sm-2 col-form-label bg-light">E-Mail : </label>
                <div class="col-sm-6 form-control">
                    {{ utilisateur.mail }}
                </div>
            </div>
            <div class="form-group row">
                <label for="site" class="col-sm-4 offset-sm-2 col-form-label bg-light">Site : </label>
                <div class="col-sm-6 form-control">
                    {{ utilisateur.site.nom }}
                </div>
            </div>
            <div id="modifierProfil-btnGroupe ">
                <a href="{{ path('utilisateur_modifierProfil') }}">
                    <button type="button" class="btn btn-outline-danger offset-6">Retour</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}Mon profil{% endblock %}