{% extends 'base.html.twig' %}
{% form_theme motDePasseForm '/themes/form_errors.html.twig' %}
{% block body %}

    <h1 class="text-center">Modifier votre mot de passe</h1>
    <br>
    <div class="row" id="modifierMotDePasseContainer">
        <div class="col-sm-6 offset-2">
            {{ form_start(motDePasseForm) }}
            <div class="form-group row">
                {{ form_label(motDePasseForm.password, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(motDePasseForm.password.first, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    {{ form_errors(motDePasseForm.password.first) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 offset-sm-6">
                    {{ form_widget(motDePasseForm.password.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                    {{ form_errors(motDePasseForm.password.second) }}
                </div>
            </div>
            <br>
            <div id="modifierProfil-btnGroupe">
                <button type="submit" class="btn btn-outline-success offset-6 col-sm-2">Enregistrer</button>
                <a href="{{ path('utilisateur_modifierProfil') }}">
                    <button type="button" class="btn btn-outline-danger col-sm-2 offset-sm-1">Annuler</button>
                </a>
            </div>
            {# Afficher message erreurs #}
            <div id="errorMsg" class="col-sm-12 text-center">
                {{ form_errors(motDePasseForm, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# Message flash qui informe que le mot de passe a été modifié #}
            <div class="flashes">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        {{ form_end(motDePasseForm) }}
    </div>
{% endblock %}

{% block title %}Modifier votre mot de passe | {{ parent() }}{% endblock %}