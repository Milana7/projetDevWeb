{% extends 'base.html.twig' %}

{% block title %}Connexion | {{ parent() }}{% endblock %}

{% block main %}
    <form action="{{ path('login') }}" method="post">
        <div>
            <label for="username">Identifiant :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="prenom.nom+annee@campus-eni.fr"/>
        </div>
        <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password"/>
        </div>
        <div class="row">
            <div>
                <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                <label for="remember_me" class="form-check-inline">Remember me</label>
            </div>
            <div>
                <a href="">Mot de passe oubli√© ?</a>
            </div>
        </div>
        {% if error %}
            <div>
                <ul>
                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                </ul>
            </div>
        {% endif %}

        <button type="submit">Connexion</button>
    </form>
{% endblock %}
