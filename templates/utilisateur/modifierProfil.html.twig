{% extends 'base.html.twig' %}
{% form_theme utilisateurForm '/themes/form_errors.html.twig' %}
{% block title %}Modifier votre profil | {{ parent() }}{% endblock %}
{% block body %}

    <h1 class="text-center">Mon Profil</h1>
    <br>
    <div class="row" id="modifierProfilContainer">
        <div class="image col-sm-3 col-xs-12 mb-4 ml-4 mr-4">
            <img src="{{ asset('image/profil.jpg') }}" class="img-thumbnail rounded">
        </div>

        <div class="col-sm-6">
            {{ form_start(utilisateurForm) }}
            <div class="form-group row">
                {{ form_label(utilisateurForm.pseudo, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.pseudo) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(utilisateurForm.nom, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.nom) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(utilisateurForm.prenom, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.prenom) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(utilisateurForm.telephone, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.telephone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.telephone) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(utilisateurForm.mail, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.mail, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.mail) }}
                </div>
            </div>
            <br>
            <div class="form-group row">
                {{ form_label(utilisateurForm.site, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.site, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.site) }}
                </div>
            </div>
            <br>
            {# FICHIER #}
            <div class="form-group row">
                {{ form_label(utilisateurForm.fileTemp, null, {'label_attr': {'class': 'col-sm-4 offset-sm-2 col-form-label bg-light'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(utilisateurForm.fileTemp, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(utilisateurForm.fileTemp) }}
                </div>
            </div>
            <div id="errorMsg" class="col-sm-12 text-center">
                {{ form_errors(utilisateurForm, {'attr': {'class': 'form-control'}}) }}
            </div>
            <br>
            <div id="modifierProfil-btnGroupe">
                <button type="submit" class="btn btn-outline-success offset-6">Enregistrer</button>
                <a href="{{ path('sortiesapp_sortie_listsorties') }}">
                    <button type="button" class="btn btn-outline-danger">Annuler</button>
                </a>
                <a href="{{ path('utilisateur_modifierMotDePasse') }}">
                    <button type="button" class="btn btn-outline-info">Modifier le mot de passe</button>
                </a>
            </div>

            {# Message flash qui informe que le profil a été modifié #}
            <div class="flashes">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        {{ form_end(utilisateurForm) }}
    </div>
{% endblock %}

