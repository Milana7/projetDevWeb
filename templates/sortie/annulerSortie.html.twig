{% extends 'base.html.twig' %}
{% block title %}Annuler une sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Annuler une sortie</h1>
    </div>
    <br>
    <div class="row, col-sm-6 offset-sm-3" id="formulaireContainer">
        <div class="row form-group offset-sm-1">
            <label for="nomSortie" class="col-sm-3">Nom de la sortie : </label>
         <div class="form-control">{{ sortie.nom }}</div>
        </div>

        <div class="row form-group offset-sm-1">
            <label for="dateSortie" class="col-sm-3">Date de la sortie : </label>
            {{ sortie.dateHeureDebut }}
        </div>

        <div class="row form-group offset-sm-1">
            <label for="villeOrga" class="col-sm-3">Ville organisatrice : </label>
            {{ sortie.organisateur.site.id }}
        </div>

        <div class="row form-group offset-sm-1">
            <label for="lieuSortie" class="col-sm-3">Lieu : </label>
            {{ sortie.lieu.id }}
        </div>


        {# Cr√©ation du formulaire avec certains champs fixes #}
        {{ form_start(sortieForm) }}
        {{ form_widget(sortieForm) }}
        <br>
        <button type="submit" class="btn btn-outline-success col-sm-4 mx-auto">Enregistrer</button>
        <a href="{{ path('sortiesapp_sortie_listsorties') }}">
            <button type="button" class="btn btn-outline-warning col-sm-4 mx-auto">Retour</button>
        </a>
        {{ form_end(sortieForm) }}
    </div>
{% endblock %}